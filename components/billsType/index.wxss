.container{
  box-sizing: border-box;
  width: 230rpx;
  height: 260rpx;
  border-radius: 6rpx;
  box-shadow:0px 0px 4px #333333;
  color: #555;
  padding: 0;
  margin: 15rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.img{
  width:100%;
  height: 50%;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.image{
  width: 100%;
  height: 100%;
}
.info{
  width:100%;
  height: 50%;
  box-sizing: border-box;
  margin: 0;
  padding: 0 6rpx;
}
.infoText{
  font-size: 24rpx;
  color: #555;
  display: inline-block;
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40rpx;
}
.image{
  width:230rpx;
  height:140rpx;
  margin: 0;
  padding: 0;
}
.title{
  width: 100%;
  height: 33.333333%;
}
.msg{
  width: 100%;
  height: 33.333333%;
  display: flex;
  align-items: center;
}
.msg-info{
  font-size: 20rpx;
  display: inline-block;
  padding: 2rpx 6rpx;
  background: #FFFACD;
  color: #555;
}
.content{
  width: 100%;
  height: 33.333333%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #555;
}
.yes-not{
  display: inline-block;
  box-sizing: border-box;
  padding: 2rpx 6rpx;
  font-size: 18rpx;
  line-height: 18rpx;
  text-align: center;
  color: darkorange;
  border: 1px solid darkorange;
}