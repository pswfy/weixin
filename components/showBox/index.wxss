.container{
  width: 100%;
  padding:10rpx 20rpx;
  box-sizing: border-box;
}
.container-info{
   box-shadow: 0 0 10rpx #999;
   flex-direction: column;
   border-radius: 4px;
   height: 680rpx;
}
.max-image{
  box-sizing: border-box;
  position: relative;
  width: 100%;
  padding: 16rpx;
  height: 420rpx;
}
.see{
  position: absolute;
  right: 30rpx;
  top:30rpx;
  padding: 2rpx 8rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #333;
  background: orange;
}
.max-image>image{
  width: 100%;
  height: 400rpx;
}
.info-content{
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}
.info-img{
  width: 100%;
  height:200rpx;
  display: flex;
  justify-content: flex-start;
  overflow: hidden;
}
.images{
  width: 220rpx;
  height:160rpx;
  position: relative;
  margin-right: 12rpx;
}
.images>image{
  width: 220rpx;
  height:160rpx;
}
.text{
  position: absolute;
  top:0;
  left: 0;
  width: 220rpx;
  height:160rpx;
  background:rgba(0, 0, 0, 0.3);
}
.text>text{
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
  width: 100%;
  height:40rpx;
  box-sizing: border-box;
}
.text>text:first-child{
  margin-top: 40rpx;
}
.info-text{
  position: relative;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.item-te{
  position: absolute;
  top:38rpx;
  right: 0;
  display: flex;
}
.item-te>text{
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 20rpx;
  border:1px solid #333;
  border-radius: 20rpx;
  padding: 2rpx 8rpx;
  color: #333;
  margin-left: 8rpx;
}
.derr-name{
  color: #424242;
  font-size: 15px;
  font-weight: 500;
}
.derr{
  color: #9a9a9a;
  font-size: 12px;
  font-weight: 400;
}