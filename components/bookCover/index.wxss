.container{
  width:100%;
  height:440rpx;
  overflow: hidden;
}
.container-main{
  overflow-x: scroll;
  overflow-y: hidden;
  display: flex;
  flex-direction: row;
  height: 370rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.container-main::-webkit-scrollbar {
    display: none;
}
.container-main-item{
  position: relative;
  width: 270rpx;
  height: 100%;
  widows: 140rpx;
  padding: 0 34rpx 0 0;
}
.container-main-item>image{
  width: 270rpx;
  height: 100%;
  border-radius: 14rpx;
}
.container-main-item>image:last-child{
  margin-right: 20rpx;
}
.max-header{
  font-size: 30rpx;
  position: absolute;
  top:20rpx;
  left: 20rpx;
  color: #fff;
  font-weight: 600;
}
.min-header{
  font-size: 28rpx;
  position: absolute;
  top:60rpx;
  left: 20rpx;
  color: #fff;
  font-weight: 500;
}