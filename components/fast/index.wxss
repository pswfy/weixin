.container{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  height:80rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  display: flex;
  color: #2F4F4F;
  border-top: 1rpx solid #f0f0f0;
  background: #FCFCFC;
}
.left{
  height: 100%;
  width:50%;
  display: flex;
  line-height: 80rpx;
}
.share{
  height: 100%;
  width:50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  line-height: 80rpx;
}
.phone-o{
  height: 100%;
  width:50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
}
.right{
  height:100%;
  width:50%;
  font-size: 44rpx;
  background: #FAFAFA;
  display: flex;
  align-content: center;
}
.text{
  font-size: 44rpx;
}